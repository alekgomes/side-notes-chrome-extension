{
  "manifest_version": 3,
  "name": "Side Notes",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "src/contentScripts/content_script.tsx"
      ]

    }
  ],
  "action": {
    "default_title": "Click Me",
    "default_popup": "index.html"
  }
}
